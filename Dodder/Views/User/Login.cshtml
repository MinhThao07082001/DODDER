@model Dodder.Models.UserAccount
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
@if (TempData["error"] != null)
{
    <script>
        alert("Email or Password is not correct");
    </script>
}
<!-- main -->
<div class="main">
    <canvas id="myCanvas"></canvas>
    <div class="main-w3l">
        <h1 class="logo-w3">DODDER</h1>
        <div class="w3layouts-main">
            <h2>Login Now</h2>
            <form asp-controller="User" asp-action="Login" method="post">
                <label style="color:white">Email</label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span><br />

                <label style="color:white">Password</label>
                <input type="password" asp-for="Password" />
                <input type="text" id="lat" asp-for="Latitude" hidden/>
                <input type="text" id="longt" asp-for="Longitude" hidden/>
                <span asp-validation-for="Password"></span><br />
                <input type="submit" value="Login" name="login">

            </form>
            <a asp-controller="User" asp-action="Register" style="color:white">If you don't have an account, click here to sign up</a>
            <a asp-controller="Home" asp-action="Dodder" style="color:white">Come back home</a>
            @*<h6><a href="#">Forgot Password?</a></h6>*@
        </div>

        <div class="clear"></div>
        <!-- //main -->
        <!--footer-->
        <div class="footer-w3l">
            <p>2021 version. All rights reserved | Design by DODDER</p>
        </div>
        <!--//footer-->
    </div>
</div>


<!--scripts-->
<!-- js -->
<script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
<!-- //js -->
<!-- particles-JavaScript -->
<script src="js/particles.min.js"></script>
<script>
    window.onload = function () {
        Particles.init({
            selector: '#myCanvas',
            color: '#eba7a7',
            connectParticles: true,
            minDistance: 90
        });
    };
</script>
<script>
    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else {
            alert("Geolocation is not supported by this browser.");
        }
    }
    function showPosition(position) {
        var lat = position.coords.latitude;
        var long = position.coords.longitude;
        document.getElementById("lat").value = lat;
        document.getElementById("long").value = long;
    }
    getLocation();
</script>

<!-- //particles-JavaScript -->
<!--//scripts-->
